<p style="color: green"><%= notice %></p>

<h1>Users</h1>

<div id="users">
  <% @users.select {|user| user.library_id == current_user.library_id}.each do |user| %>
    <%= render user %>
    <p>
      <%= link_to "Show this user", user %>
    </p>
  <% end %>
</div>
<% if (logged_in? && current_user.admin)  %>
<div>
  <%= link_to "New user", new_user_path %>
</div>
<%end%>

