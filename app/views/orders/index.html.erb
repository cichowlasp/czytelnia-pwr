<p style="color: green"><%= notice %></p>

<h1>Orders</h1>

<div id="orders">
  <% @orders.each do |order| %>
    <% if order.user_id == current_user.id %>
    <%= render order %>
      <p>
      <%= link_to "Show this order", order %>
    </p>
    <% end %>
  <% end %>
</div>

<%= link_to "New order", new_order_path %>
